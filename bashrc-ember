# vim: ft=sh

routed6='2a06:e881:108:1::4'

# Display Kerberos ticket status

parts[right]+=' <:ticket'
fmts[ticket.valid]='0'
fmts[ticket.expired]='38;5;166'
_ticketstatus() {
	if klist -5 -s; then
		items[ticket]=''
		items[ticket:pfx]=''
		items[ticket:sfx]=''
		fmts[ticket]=@ticket.valid
	else
		items[ticket]='no tickets'
		items[ticket:pfx]='*'
		items[ticket:sfx]='*'
		fmts[ticket]=@ticket.expired
	fi
}
PROMPT_COMMAND+=(_ticketstatus)

. ~/.dotfiles/bash/workprompt.sh
