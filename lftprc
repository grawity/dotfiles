# ~/.config/lftp/rc

alias - "cd -"
alias .. "cd .."
alias ls "cls -h"
alias ll "cls -lh"
alias rels "cache flush; ls"
alias rget "mirror"
alias rput "mirror -R"
#alias rgetmove "mirror --Move"
#alias rputmove "mirror -R --Move"

set cmd:prompt "\\[\\e[38;5;173m\\]lftp \\[\\e[38;5;216m\\]\\S\\? \\u\\@\\h:\\w>\\[\\e[m\\] "
set cmd:set-term-status yes

set dns:SRV-query yes
set ftp:anon-pass "anonymous@example.com"
set ftp:use-ip-tos yes

set ftp:ssl-allow-anonymous yes
set ftp:ssl-protect-data yes
set ftp:ssl-protect-fxp yes

set ftp:use-mlsd yes

set xfer:clobber no

set ftp:passive-mode/ftp.isu.edu.tw no

set ssl:verify-certificate/items-uploads.archive.org no
set ssl:verify-certificate/eu.ftp.muffnet.xyz no
set ssl:verify-certificate/us.ftp.muffnet.xyz no
set ssl:verify-certificate/releases.betaarchive.com no
set ssl:verify-certificate/ftp.dfn-cert.de no
set ssl:verify-certificate/ftp.cert.dfn.de no

set ftp:use-feat/ftp.vlk.lt no
set ftp:ssl-allow/ftp.vlk.lt no

set ftp:ssl-allow-anonymous/happy.kiev.ua no
