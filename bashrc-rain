# vim: ft=sh

[[ $- != *i* ]] && return

if [[ $DISPLAY ]]; then
	. ~/lib/dotfiles/bash/yank.sh
fi

## Aliases

alias clock='tty-clock -c'
alias eof='IGNOREEOF=3'
alias eris='ssh wolke -t tmux attach -t eris'
alias fumount='fusermount -u'
alias gdm='sudo systemctl start gdm'
alias gmm='run google-musicmanager'
alias ip='ip -c'
alias journalctl='journalctl --no-hostname'
alias powerdown='udisksctl poweroff -b'
alias RM='/bin/rm -I'
alias sensors='sensors -A'
alias unrm='trash --restore'

b64() { printf "%s" "$*" | base64 -w0; }

gensid() {
	local a=$(perl -e 'print int rand 0xFFFFFFFF')
	local b=$(perl -e 'print int rand 0xFFFFFFFF')
	local c=$(perl -e 'print int rand 0xFFFFFFFF')
	echo "S-1-5-21-$a-$b-$c"
}

oldssh() {
	ssh -o KexAlgorithms="+diffie-hellman-group1-sha1" \
	    -o HostKeyAlgorithms="+ssh-dss" \
	    -o Ciphers="+3des-cbc" \
	    "$@";
}

rand() { perl -e "print int rand $1"; }

rm() {
	local opts=() arg path nuke=() trash=()
	for arg; do
		if [[ $arg == -* ]]; then
			opts+=("$arg")
		elif case $(realpath -s "$arg") in
		# skip filesystems
		~/fs/*)			false;;
		~/@*)			false;;
		# skip junk
		~/.cache/pacaur/*)	false;;
		~/.local/share/Trash/*)	false;;
		*.tmp)			false;;
		*/.Trash/*)		false;;
		.unison.*)		false;;
		# include $HOME
		~/*)			true;;
		/pub/*)			true;;
		/ssd.home/*)		true;;
		# include removable drives
		/media/*)		true;;
		/mnt/*)			true;;
		/run/media/*)		true;;
		# exclude everything else elsewhere
		*)			false;;
		esac; then
			trash+=("$arg")
		else
			nuke+=("$arg")
		fi
	done
	if (( ${#trash[@]} )); then
		trash "${opts[@]}" -- "${trash[@]}"
	fi &&
	if (( ${#nuke[@]} )); then
		command rm -I "${opts[@]}" -- "${nuke[@]}"
	fi
}

rpw() {
	local pw=$(tr -dc "A-Za-z0-9" < /dev/urandom | head -c "${1:-16}")
	echo "$pw"
	if [[ -t 1 ]]; then
		clip "$pw"
	fi
}

sudo:() {
	if (( UID ))
		then do: sudo "$@"
		else do: "$@"
	fi
}

tzsp() {
	tshark -f "udp port 37008" -i "${1:-wlan0}" "${@:2}"
}

tzsp-gui() {
	run wireshark-gtk -k -f "udp port 37008" -i "${1:-wlan0}" "${@:2}"
}

ukvpn() {
	local con="Utenos kolegija (admin)"
	for arg; do
		case $arg in
		    up|down)
			sudo: nmcli con "$arg" "$con";;
		    wan4|wan)
			sudo: nmcli con modify "$con" ipv4.never-default no;;
		    lan4|lan)
			sudo: nmcli con modify "$con" ipv4.never-default yes;;
		    wan6)
			sudo: nmcli con modify "$con" ipv6.never-default no;;
		    lan6)
			sudo: nmcli con modify "$con" ipv6.never-default yes;;
		    *)
			echo "'$arg'?";;
		esac
	done
}

vnet() {
	local arg=${1:-show}
	case $arg in
		up) arg="start";;
		down) arg="stop";;
		show) arg="list-dependencies";;
	esac
	sudo: systemctl $arg vm-network.target
}

youtube-dl() {
	local cmd=()
	cmd+=(
		systemd-inhibit
		--who "youtube-dl"
		--what "sleep"
		--why "Downloading a video"
	)
	cmd+=(
		gnome-inhibit -A
		--who "youtube-dl"
		--what "suspend"
		--why "Downloading a video"
	)
	cmd+=(
		youtube-dl
		--add-metadata
		--console-title
		--continue
		--format "bestvideo+m4a/bestvideo+bestaudio/best"
		--no-playlist
		"$@"
	)
	"${cmd[@]}"
}

:pp() {
	local var=$1 k=; local -n ref=$1
	echo "$var=("
	for k in ${!ref[@]}; do
		echo "  [$k]=${ref[$k]@Q}"
	done
	echo ")"
}

nssdb="sql:$HOME/.pki/nssdb"
fxdb() { (nssdb="$HOME/.mozilla/firefox/ov6jazas.default"; "$@"); }
thdb() { (nssdb="$HOME/.thunderbird/1xrzgg5b.default"; "$@"); }

cu() { do: certutil -d "$nssdb" "$@"; }
mu() { do: modutil  -dbdir "$nssdb" "$@"; }
pu() { do: pk12util -d "$nssdb" "$@"; }
st() { do: signtool -d "$nssdb" "$@"; }

_update_cwd() {
	# after `git mkbare`
	local r=$?
	if [[ ! -d "$PWD" ]] && [[ -d "$PWD.git" ]]; then
		echo "* changing directory to $PWD.git"
		cd "$PWD.git"
	fi
	return $r
}
PROMPT_COMMAND="_update_cwd; $PROMPT_COMMAND"
