# vim: ft=sshconfig
# NOTE: The '#if' directives are processed by the 'ssh/generate' script, not OpenSSH.

# -- Own hosts --

Host blizzard.nullroute.eu.org
	User mantas

#if Host star || Host ember || Host wind
# 2020-04-04: IV<->LITNET have an IPv4-only peering with ~900 Mbps throughput,
#             whereas IPv6 takes a longer path at ~220 Mbps only.
Host ember.nullroute.eu.org
	AddressFamily inet

Host wind.nullroute.eu.org
	AddressFamily inet

Host star.nullroute.eu.org
	AddressFamily inet
#endif

Host *.nullroute.eu.org
	GSSAPIDelegateCredentials yes
	ForwardAgent yes

# -- Other hosts --

Host eisner
	HostName %h.encompasserve.org
	User mikulenas

Host sdf sdf.org
	HostName tty.sdf.org

Host theos
	HostName %h.kyriasis.com

# -- Services --

Host aur
	HostName aur.archlinux.org
	User aur

Host ftp.ext.hpe.com
	Port 2222
	# 2019-03-21: Server includes umac-64@openssh.com at the end of
	# its proposal, but hangs after MSG_NEWKEYS if it is selected.
	MACs -umac-*
	PreferredAuthentications password

Host github.com
	ControlMaster auto
	ControlPersist 5m

# -- Work --

Host cacti cacti.utenos-kolegija.lt
	HostName uk-cacti.utenos-kolegija.lt

Host radius.utenos-kolegija.lt
	ForwardAgent yes

Host *.utenos-kolegija.lt *.ukolegija.lt
	IdentityFile ~/.ssh/work/id_ukolegija
	AddKeysToAgent yes

Host gw-b56-bypass
	HostName 193.219.181.189
	HostkeyAlias gw-b56.utenos-kolegija.lt
#if ! Host star
	# Allowed from star only
	ProxyJump star
#endif

Host radius-console
	HostName 10.34.1.14
	User cons

# -- Global settings --

Host ubnt
	HostName 192.168.1.20
	User ubnt
	UserKnownHostsFile /dev/null
	GlobalKnownHostsFile /dev/null
	StrictHostKeyChecking no
	ControlPersist no

Host *
	CanonicalizeHostname yes
	CanonicalDomains nullroute.eu.org nullroute.lt utenos-kolegija.lt ukolegija.lt
	Protocol 2
	HashKnownHosts no
	VerifyHostKeyDNS yes
	GSSAPIAuthentication yes
	SendEnv LANG TZ
	ControlPath ~/.ssh/S.%r@%h:%p
	ControlMaster auto
	ControlPersist 15s
	# Test before 8.5
	HostKeyAlgorithms -ssh-rsa
