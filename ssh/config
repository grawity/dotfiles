# vim: ft=sshconfig
# Target version: 8.4 (Debian buster-backports)
#
# NOTE: The '#if <host>' directives are processed by the 'ssh/generate' script,
# not by OpenSSH.

IgnoreUnknown PubkeyAcceptedAlgorithms,WarnWeakCrypto

#if frost
Host ember.nullroute.lt ember.sym
	ForwardX11 yes
	ForwardX11Trusted yes
#endif

#if midnight
Host myth.nullroute.lt myth.sym
	ForwardX11 yes
	ForwardX11Trusted yes
#endif

Host armxgw.sym dunegw.sym embergw.sym frostgw.sym shoregw.sym windgw.sym homegw.sym
	User admin

Host *.armxgw.sym *.dunegw.sym *.embergw.sym *.frostgw.sym *.shoregw.sym *.windgw.sym
	User admin

Host bmc.*.nullroute.lt bmc.*.sym
	User Administrator

Host ptp-u2*.sym ptp-pico*.sym kol-*.sym
	# airOS 4.x-6.x
	KexAlgorithms +diffie-hellman-group1-sha1
	User root

Host er-x.sym
	User ubnt

Host rut200.sym rutosgw.sym
	User root

Host *.nullroute.lt *.symlink.lt *.sym
	GSSAPIAuthentication yes
	ForwardAgent yes

Host *.sym
	# Allow old ciphers for internal hosts. The internal network already
	# carries a lot of non-SSH and non-TLS traffic, so it relies on link-
	# or network-layer security in any case.
	KexAlgorithms +diffie-hellman-group14-sha1
	HostKeyAlgorithms +ssh-rsa
	PubkeyAcceptedAlgorithms +ssh-rsa

# -- Other hosts --

Host aur
	Hostname aur.archlinux.org
	User aur

Host shell.*.burble.dn42
	User symlink

Host burble-fr
	Hostname shell.fr-rbx1.burble.dn42

Host burble-uk
	Hostname shell.uk-lon1.burble.dn42

Host burble-de
	Hostname shell.de-fra2.burble.dn42

Host burble-ca
	Hostname shell.ca-bhs1.burble.dn42

Host burble-ash
	Hostname shell.us-ash1.burble.dn42

Host burble-lax
	Hostname shell.us-lax1.burble.dn42

Host eisner
	Hostname %h.decus.org
	Port 22867
	HostKeyAlgorithms +ssh-rsa
	PubkeyAcceptedAlgorithms +ssh-rsa
	User mikulenas

Host *.ngrok.com *.ngrok-agent.com
	ControlPath none

Host ppc-alpine
	Hostname aludra.ppc64.be

Host ppc-chimera
	Hostname adhara.ppc64.be

Host ppc-fedora
	Hostname theta.ppc64.be
	GSSAPIAuthentication no

Host ppc-freebsd
	Hostname furud.ppc64.be

Host ppc-arch
	Hostname yeji.ppc64.be

Host aix.ppc64.be
	KexAlgorithms -mlkem768x25519-sha256

Host sdf sdf.org
	Hostname tty.sdf.org

Host sdf-eu sdf.eu
	Hostname sdf-eu.org

Host theos
	Hostname %h.kyriasis.com

# -- Work --

Host bmc-*.utenos-kolegija.lt
	# iLO (import public key in "SSH2" format)
	KexAlgorithms +diffie-hellman-group14-sha1
	HostKeyAlgorithms +ssh-rsa
	PubkeyAcceptedAlgorithms +ssh-rsa
	User Administrator

Host gw-b56.utenos-kolegija.lt gw-m18.utenos-kolegija.lt
	User admin

Host gw-core-alt
#if ember
	# Direct connection via 'litnet' VLAN
	Hostname 2001:778:0:1025::2
	BindAddress 2001:778:0:1025::3
#else
	Hostname 83.171.33.188
	ProxyJump sky
#endif
	HostkeyAlias gw-core.utenos-kolegija.lt
	User root

#if frost
Host 10.*
	PubkeyAcceptedAlgorithms +ssh-rsa
#endif

# -- Global settings --

Host *.*
	# Disable GSSAPI for FQDNs that aren't our own
	GSSAPIAuthentication no

Host *
	# ...but enable it for single-label names
	GSSAPIAuthentication yes

#if @(ember|wind)
Host *
	# Persist authenticated connections, where timeouts are not an issue
	# (on systems that are not suspended).
	ControlMaster auto
	ControlPersist 1h
#else
Host ember.nullroute.lt
	# Don't multiplex connections that need high throughput (improves
	# "annex get -J4" speed on LTE).
	ControlPath none

Host *
	# Allow multiplexing but don't persist connections once closed.
	# (Without this, "ControlMaster auto" would work differently; exiting
	# the initial session would immediately close the mux and all muxed
	# sessions, rather than backgrounding it.)
	ControlMaster auto
	ControlPersist 5s
#endif

#if @(ember|frost)
Host *
	CanonicalDomains sym nullroute.lt utenos-kolegija.lt ukolegija.lt
#else
Host *
	CanonicalDomains sym nullroute.lt
#endif

Host *
	CanonicalizeHostname yes
	#VerifyHostKeyDNS yes
	SendEnv LANG TZ
	ControlPath ~/.ssh/S.%r@%h:%p

	# Re-disable known_hosts obfuscation (enabled by default on Debian).
	HashKnownHosts no

	# Do not add the resolved IP addresses to ~/.ssh/known_hosts. (This
	# defaults to 'no' on new versions, but still 'yes' on Debian's 8.4)
	CheckHostIP no

	# Don't automatically add extra hostkeys provided by server, since the
	# feature insists on replacing the known_hosts symlink with plain file.
	UpdateHostKeys no

	# Disable PQ cryptography warnings in general
	WarnWeakCrypto no
